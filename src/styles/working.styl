@css {

  .mobile-only {
    display: none;
  }

  @media(max-width: 1200px) {
    #signup_page {
      margin-top: -30px;
      max-width: 100vw;
      padding-top: 0px;
      overflow-x: hidden;
    }

    .registration-logo#signup_logo {
      float: none;
      margin-left: auto;
      margin-right: auto;
      display: block;
      height: 45px;
    }

    .mobile-only { display: block; }

    .mobile-hidden,
    .disable-overlay { display: none; }

    .mobile-only.mobile-progress,
    .registration-header.mobile-only {
      text-align: center;
      padding-top: 15px;
      padding-left: 0px;
      margin-bottom: 0px;
    }

    .progress-button {
      list-style-type: none;
      display: inline-block;
    }

    .progress-button:before{
      display: block;
      content: '';
      height: 11px;
      width: 11px;
      border-radius: 7px;
      background-color: white;
      border: 1px solid #2196f3;
      margin-right: 7px;
      margin-left: 7px;
    }

    .progress-button:after {
      content: '';
      width: 0px;
    }

    .progress-button.active-progress:after {
      content: '';
      width: 20px;
      height: 2px;
      background: #2196f3;
      position: absolute;
      margin-top: -6px;
      z-index: -1;
      transition: all 0.5s ease;
    }

    .progress-button.active-progress:before {
      background-color: #2196f3;
      transition: all 0.5s ease;
    }

    .lead.mobile-only,
    .signup-header {
      text-align: center;
      margin: 0px auto;
    }

    .signup-header {
      font-size: 20px;
    }

    .row.well {
      background-color: white;
      padding-top: 0px;
      padding-bottom: 0px;
      margin: -20px 0px 0px 0px;
    }

    .row.well > .col-lg-12.form-group,
    .row.well > .col-lg-6.form-group {
      margin-bottom: 0px;
    }

    .form-group.col-lg-4 {
      padding-left: 40px;
      padding-right: 40px;
    }

    .continue.col-lg-4 {
      padding-left: 50px;
      padding-right: 50px;
    }

    .mobile-faq.mobile-only {
      text-align: center;
      font-size: 15px;
      color: #2196f3;
    }

    .mobile-faq.mobile-only > strong { cursor: pointer }
  }
}
