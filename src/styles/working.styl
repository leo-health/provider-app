@css {
  .recipient-field-container {
    width: 100%;
    height: 60px;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  .messenger-reply {
    line-height: 20px;
    height: 50px;
  }

  .find-family-field {
    line-height: 40px;
  }

  .hidden-notes {
    display: none;
  }

  .toggler {
    position: relative;
    margin-top: 5px;
    padding-right: 10px;
    font-size: 25px;
    cursor: pointer;
    display: none;
  }

  @media (min-width: 1200px) {
    .toggler { display: inline; }
  }

  #message-form > .panel {
    margin-bottom: 10px !important;
  }

  .to-field {
    position: relative;
    top: 20%;
    padding-left: 15px;
    font-size: 18px;
    width: 100%;
  }

  .to-field--list {
    display: inline-block;
    overflow-y: auto;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 94%;
  }

  .to-field--individual {
    display: inline-block;
    padding-left: 10px;
  }

  .to-field--to {
    padding-right: 10px;
    font-size: 23px;
    display: inline-block;
  }

  #chatbox {
    padding-bottom: 0px !important;
    margin-bottom: 10px !important;
  }

  .family-notes-container {
    display: inline-block;
    height: 400px;
    margin-top: -160px;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
    width: 100%;
  }

  .child-title { padding-top: 5px; }
}
