@css {
  /*Formatting*/

  .mobile-only {
    display: none;
  }

  @media(max-width: 1200px) {
    .col-lg-12.well {
      background-color: white;
    }

    #signup_page {
      margin-top: -30px;
      max-width: 100vw;
      padding-top: 0px;
      overflow-x: hidden;
    }

    .registration-logo#signup_logo {
      float: none;
      margin-left: auto;
      margin-right: auto;
      display: block;
      height: 45px;
    }

    .mobile-only { display: block; }

    .mobile-hidden,
    .disable-overlay { display: none; }

    /*Progress Bar*/

    .mobile-only.mobile-progress,
    .registration-header.mobile-only {
      text-align: center;
      padding-top: 15px;
      padding-left: 0px;
      margin-bottom: 0px;
    }

    .progress-button {
      list-style-type: none;
      display: inline-block;
    }

    .progress-button:before{
      display: block;
      content: '';
      height: 11px;
      width: 11px;
      border-radius: 7px;
      background-color: white;
      border: 1px solid #2196f3;
      margin-right: 7px;
      margin-left: 7px;
    }

    .progress-button:after {
      content: '';
      width: 0px;
    }

    .progress-button.active-progress:after {
      content: '';
      width: 20px;
      height: 2px;
      background: #2196f3;
      position: absolute;
      margin-top: -6px;
      z-index: -1;
      transition: all 0.5s ease;
    }

    .progress-button.active-progress:before {
      background-color: #2196f3;
      transition: all 0.5s ease;
    }

    .lead.mobile-only,
    .signup-header {
      text-align: center;
      margin: 0px auto;
    }

    .signup-header {
      font-size: 20px;
    }

    .row.well {
      background-color: white;
      padding-top: 0px;
      padding-bottom: 0px;
      margin: -20px 0px 0px 0px;
    }

    .reset-bottom {
      margin-bottom: 0px;
    }

    .form-group.col-lg-4 {
      padding-left: 40px;
      padding-right: 40px;
    }

    .continue.col-lg-4 {
      padding-left: 50px;
      padding-right: 50px;
    }

    .thirty-mobile-side-padding {
      padding-left: 35px;
      padding-right: 35px;
    }

    /*FAQ*/

    .mobile-faq.mobile-only {
      text-align: center;
      font-size: 15px;
      color: #2196f3;
    }

    .mobile-faq.mobile-only > strong { cursor: pointer }

    .faq-overlay.enable-overlay {
      position: fixed;
      top: 0;
      left: 0;
      background:rgba(0,0,0,0.6);
      z-index:5;
      width: 100vw;
      height:100vh;
    }

    #accordion.enable-overlay {
      display: block;
      max-height: 60vh;
      width: 70vw;
      position: fixed;
      margin: 0 auto;
      z-index: 10;
      top: 20vh;
      left: 15vw;
      overflow-y: auto;
      text-align: center;
    }

    .date-selector {
      display: inline-block;
      max-width: 33%;
    }

    /*Family enrollment*/

    .add-another-child {
      width: 100%;
    }

    .patient-carousel {
      text-align: center;
    }

    .patient-individual-container {
      display: inline-block;
    }

    .patient-individual {
      margin: 0px 10px;
      display: inline-block;
    }

    .carousel-buttons {
      height: 100%;
      width: 25px;
      padding-top: 10px;
      display: inline-block;
      float: left;
    }

    .avatar-details {
      display: inline-block;
      float: left;
    }

    .avatar-name-container {
      position: relative;
      left: 50%;
    }
    .avatar-first-name {
      position: relative;
      display: inline-block;
      width: 80px;
      left: -50%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .patient-avatar {
      height: 50px;
      margin-right: 0px;
    }

    .patient-carousel {
      text-align: center;
      padding: 0px 30px;
    }
    .carousel-padding {
      padding-bottom: 330px;
    }
    .edit-container {
      position: absolute;
      left: 50%
    }
    .nested-edit-patient-form{
      width: 100vw;
      position: relative;
      left: -50vw;
      text-align: left;
    }

    .carousel-arrow {
      position: relative;
      top: 25px;
    }
  }
}
