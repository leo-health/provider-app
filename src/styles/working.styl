@css {
  .navbar-nav.collapsed {
    white-space: nowrap;
    display: inline-block;
  }

  .logout-nav > li {
    white-space: nowrap;
    padding-right: 5px;
  }


  @media (min-width: 768px) {
    .navbar-nav.collapsed {
      display: none;
    }

    .logout-nav--collapsed.logout-nav {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .navbar-nav.collapsed {
      position: absolute;
      left: 35%;
    }
  }

  @media (max-width: 450px) {
    .navbar-nav.collapsed {
      left: 25%;
    }
  }

  .leo-logo--collapsed {
    font-size: 30px;
    position: relative;
    bottom: 3px;
  }

  .logout-nav--collapsed {
    display: inline-block;
    float: right;
    margin-top: 15px;
  }

  .navbar-nav.collapsed > li > .navbar-brand {
    height: 0px;
  }

  @media (max-width: 400px) {
    .main-container {
      padding: 0px;
    }
  }

  .alert-form > .btn-primary.message-button {
    margin-bottom: -10px;
  }

  .pull-right.feedback,
  .container.main-container.page-header {
    margin-bottom: 0px;
    padding-bottom: 0px;
  }

  @media (max-height: 830px) {
    .footer-row {
      margin-top: -30px;
    }
  }
}
