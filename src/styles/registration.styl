@css {
  /*General Formatting*/
  .mobile-only { display: none; }

  .bring-forward { z-index: 10; }

  /*Mobile Styling*/
  @media(max-width: 1200px) {
    /*General Formatting*/
    .alert.alert-dismissible.alert-danger { text-align: center; }

    .col-lg-12.well { background-color: white; }

    #signup_page {
      margin-top: -30px;
      max-width: 100vw;
      padding-top: 0px;
      overflow-x: hidden;
    }

    .registration-logo#signup_logo {
      float: none;
      margin-left: auto;
      margin-right: auto;
      display: block;
      height: 45px;
    }

    .mobile-only { display: block; }

    .mobile-hidden,
    .mobile-only.mobile-hidden,
    .disable-overlay { display: none; }

    .row.well {
      background-color: white;
      padding-top: 0px;
      padding-bottom: 0px;
      margin: -20px 0px 0px 0px;
    }

    .reset-bottom { margin-bottom: 0px; }

    .signup-header { font-size: 20px; }

    .form-group.col-lg-4 {
      padding-left: 40px;
      padding-right: 40px;
    }

    .continue.col-lg-4,
    .col-md-4.form-group.payment-form {
      padding-left: 50px;
      padding-right: 50px;
    }

    .thirty-mobile-side-padding {
      padding-left: 35px;
      padding-right: 35px;
    }

    .lead.mobile-only,
    .signup-header {
      text-align: center;
      margin: 0px auto;
      max-width: 90vw;
    }

    /*Progress Bar*/
    .mobile-only.mobile-progress,
    .registration-header.mobile-only {
      text-align: center;
      padding-top: 15px;
      padding-left: 0px;
      margin-bottom: 0px;
    }

    .progress-button {
      list-style-type: none;
      display: inline-block;
    }

    .progress-button:before{
      display: block;
      content: '';
      height: 11px;
      width: 11px;
      border-radius: 7px;
      background-color: white;
      border: 1px solid #2196f3;
      margin-right: 7px;
      margin-left: 7px;
    }

    .progress-button:after {
      content: '';
      width: 0px;
    }

    .progress-button.active-progress:after {
      content: '';
      width: 20px;
      height: 2px;
      background: #2196f3;
      position: absolute;
      margin-top: -6px;
      z-index: -1;
      transition: all 0.5s ease;
    }

    .progress-button.active-progress:before {
      background-color: #2196f3;
      transition: all 0.5s ease;
    }

    /*FAQ*/
    .mobile-faq.mobile-only {
      text-align: center;
      font-size: 15px;
      color: #2196f3;
    }

    .mobile-faq.mobile-only > strong { cursor: pointer }

    .faq-overlay.enable-overlay {
      position: fixed;
      top: 0;
      left: 0;
      background:rgba(0,0,0,0.6);
      z-index:5;
      width: 100vw;
      height:100vh;
    }

    #accordion.enable-overlay {
      display: block;
      max-height: 60vh;
      width: 70vw;
      position: fixed;
      margin: 0 auto;
      z-index: 10;
      top: 20vh;
      left: 15vw;
      overflow-y: auto;
      text-align: center;
    }

    /*Family enrollment*/
    .date-selector { max-width: 33%; }

    .add-another-child { width: 100%; }

    .avatar-details,
    .patient-individual,
    .date-selector,
    .patient-individual-container { display: inline-block; }

    .patient-individual { margin: 0px 10px; }

    @media(max-width: 330px) {
      .patient-individual {margin: 0px; }

      .cursor.glyphicon-menu-left.cursor.carousel-arrow { margin-right: -15px; }
    }


    .carousel-buttons {
      height: 100%;
      width: 25px;
      padding-top: 10px;
      display: inline-block;
      float: left;
    }

    .icon.fa { color: #2196f3; }

    .avatar-details { float: left; }

    .avatar-name-container {
      z-index: -1;
      position: relative;
      left: 50%;
    }

    .avatar-first-name {
      position: relative;
      display: inline-block;
      width: 80px;
      left: -50%;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      padding-bottom: 5px;
    }

    .patient-avatar {
      height: 50px;
      margin-right: 0px;
    }

    .patient-carousel {
      text-align: center;
      padding: 0px 30px;
    }

    .carousel-padding { padding-bottom: 330px; }

    .edit-container {
      position: absolute;
      left: 50%
    }

    .nested-edit-patient-form{
      width: 100vw;
      position: relative;
      left: -50vw;
      text-align: left;
    }

    .carousel-arrow {
      position: relative;
      top: 25px;
    }

    .patient-underline {
      position: relative;
      height: 2px;
      width: 0px;
      left: -50%;
      top: -13px;
    }

    .patient-underline--highlighted {
      width: 100%;
      background-color: #2196f3;
      transition: width 0.2s ease;
    }

    /*Payment*/
    .promo-line.form-group {
      width: 60vw;
      float: left;
      display: inline-block;
    }

    .promo-button.form-group {
      width: 25vw;
      display: inline-block;
      float: right;
      padding: 0px;
    }

    .promo-success { text-align: center; }

    /*Review Page*/
    .review-divider {
      margin-bottom: 15px;
      height: 1px;
      width: 80vw;
      background-color: rgba(0, 0, 0, 0.1);
      margin-left: auto;
      margin-right: auto;
    }

    .row.well.review-form,
    .col-lg-12.well.review-form{
      background-color: #f9f9f9;
      padding-top: 5px;
      padding-bottom: 5px;
    }

    .credit-card-form.review-form.row.well,
    .empty-review.row.well.review-form { margin-top: 10px; }

    .review-add-child {
      display: block;
      text-align: center;
      font-size: 15px;
      padding-bottom: 5px;
    }

    .mobile-add-child--review { font-size: 15px; }
  }
}
